{{> References}}

<head>
	<meta charset="utf-8" />
	<title></title>
</head>
<body>
	<ol class="breadcrumb">
		<li><a href="/">Home</a></li>
		<li><a href="/Companies/{{CompanyId}}">{{CompanyName}}</a></li>
		<li><a href="/Contact/{{ContactId}}">{{ContactName}}</a></li>
		<li class="active">{{Note.Title}}</li>
	</ol>

	<div class="container">
		<h1>Note</h1>
		<form action="/Companies/{{CompanyId}}/Contacts/{{ContactId}}/Notes/{{Note.ID}}" method="post">
			<div class="form-group">
				<label for="Name">Title</label>
				<input type="text" class="form-control" name="Title" id="" aria-describedby="emailHelp" placeholder="Enter name" value="{{Note.Title}}" />
			</div>
			<div class="form-group">
				<label for="Name">Text</label>
				<!--<input type="text" class="form-control" id="" aria-describedby="emailHelp" placeholder="Enter name" value="{{Note.Text}}" />-->
				<textarea name="Text" class="form-control" rows="6" placeholder="Enter details" required>{{Note.Text}}</textarea>
			</div>
			<input class="btn btn-primary" type="submit" name="btnSave" value="Save" />
		</form>
	</div>
</body>